@import './breakpoints.pcss';

.footer {
  position: relative;
  height: auto;
  overflow-x: hidden;
  background: linear-gradient(rgba(24, 40, 53, 0.25) 3rem, rgba(24, 40, 53, 0.25) 40%, rgb(24, 40, 53) 80%);
  /* background: linear-gradient(to bottom, color($midnight a(25%)) 3rem, color($midnight a(25%)) 40%, color($midnight a(100%)) 80%); */

  & > *:first-child {
    padding-top: 6.66vw;
    @mixin atSm {
      padding-top: 3rem;
    }
  }
  width: 100%;
  text-align: center;
  color: white;
  @mixin atSm {
    padding-top: -3rem;
  }
  .email_phone {
    display: flex;
    position: relative;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    @mixin atSmmd {
      flex-direction: row;
    }
    @mixin atMd {
      padding-top: 6.875rem;
      font-size: 133.333% !important;
    }
  }
  a.email,
  a.phone {
    display: block;
    border-bottom: none;
    text-decoration: none;
    position: relative;
    display: block;
    opacity: 1;
    opacity: 0.85;
    font-family: 'Playfair Display' !important;
    @mixin atSm {
      font-size: 110% !important;
    }
    &:hover,
    &:active,
    &:visited,
    &:focus {
      opacity: 1;
      text-decoration: none;
      border-bottom: none;
    }
    &:hover:before {
      opacity: 1;
    }
  }

  a.email {
    &:before {
      content: '\e800';
      font-family: 'swd-icons';
      margin-right: 0.5rem;
      opacity: 0.8;
    }
  }
  a.phone {
    margin-left: -0.75rem;
    padding-left: 2.75rem;
    transform: translateY(0.375rem);
    @mixin atSmmd {
      margin-left: 0rem;
      transform: none;
    }
    @mixin atMd {
      /* padding-top: 0.5rem; */
      padding-left: 3rem;
    }
    &:before {
      opacity: 0.8;
      content: '';
      position: absolute;
      display: block;
      top: 0;
      left: 0;
      margin-left: 0.75rem;
      width: 1.75rem;
      height: 1.75rem;
      background-repeat: no-repeat;
      background-position: center top;
      background-size: contain;
      background-image: url('data:image/svg+xml;utf8,<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 128 128"><path fill="%23fff" d="M113.8,49C112,40.2,94.4,25.7,64,25.7S16,40.2,14.2,49c-0.5,2.5-0.2,5,0.8,7.4l1.8,4.5c0.7,1.8,2.7,2.7,4.6,2.1l15.1-5.1 c1.5-0.5,2.5-1.9,2.5-3.5v-5.2c0-4.5,2.7-8.5,6.9-10.1c4.1-1.6,10.2-2.4,18.2-2.4s14,0.8,18.2,2.4c4.2,1.6,6.9,5.6,6.9,10.1v5.2 c0,1.6,1,3,2.5,3.5l15.1,5.1c1.8,0.6,3.9-0.3,4.6-2.1l1.8-4.5C114,54.1,114.3,51.5,113.8,49z"/><path fill="%23fff" d="M84.2,59.8c-1-1-1.6-2.4-1.6-3.9v-6.8c0-1.8-1.1-3.4-2.8-4.1c-2.5-1-7.2-2-15.8-2s-13.3,1-15.8,2c-1.7,0.6-2.8,2.3-2.8,4.1	V56c0,1.4-0.6,2.8-1.6,3.9L32.2,71.7c-3.4,3.5-5.3,8.2-5.3,13.1v12.8c0,2.6,2.1,4.8,4.8,4.8h64.8c2.6,0,4.8-2.1,4.8-4.8V84.8 c0-4.9-1.9-9.6-5.3-13.1L84.2,59.8z M64,85.4c-9.1,0-16.5-4.8-16.5-10.7c0-5.9,7.4-10.7,16.5-10.7s16.5,4.8,16.5,10.7 C80.5,80.6,73.1,85.4,64,85.4z"/></svg>');
      @mixin atMd {
        margin-left: 0.75rem;
        width: 2.125rem;
        height: 2.125rem;
      }
    }
  }
  .social {
    outline: none;
    font-family: 'swd-icons';
    font-size: 1.5rem;
    color: white;
    text-decoration: none;
    border: none;
    display: inline-block;
    position: relative;
    margin-top: 0.375rem;
    margin-bottom: 1rem;
    padding: 0.5em;
    opacity: 0.7;
    &:hover,
    &:active,
    &:visited,
    &:focus {
      border: none !important;
      opacity: 1;
    }
    &:before {
      line-height: 1;
      color: white;
      position: relative;
    }
    &__twitter {
      &:before {
        content: '\f309';
      }
    }
    &__linkedin {
      &:before {
        content: '\f318';
      }
    }
    &__telephone {
      width: 32px;
      height: 32px;
      transform: translateY(1.5rem);
    }
  }
  &:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    right: auto;
    padding-top: 0 !important;
    padding-bottom: 0 !important;
    background: url('data:image/svg+xml;base64,');
    background-repeat: no-repeat;
    background-position: center top;
    min-height: 5.32vw;
    @mixin atSm {
    }
    position: absolute;
    left: 0;
  }
  p {
    font-size: 0.85rem !important;
    opacity: 0.8;
    margin: 0;
    &:last-child {
      padding-bottom: 1.75rem;
    }
  }
  a {
    text-decoration: none;
    color: white;
    padding-bottom: 0.15em;
    border-bottom: 1px solid rgba(255, 255, 255, 0.7);
    &:hover,
    &:active,
    &:visited,
    &:focus {
      text-decoration: none !important;
      color: white;
      border-bottom: 1px solid white;
    }
  }
}
